.page.order {
  padding-top: 40px;
  padding-bottom: 100px;
}

/* 状态栏切换 */
.top {
  position: fixed;
  top: 0;
  width: 100%;
  background-color: #FFF;
}

.status text {
  width: 20%;
  display: inline-block;
  text-align: center;
  font-size: 14px;
  padding: 10px;
  box-sizing: border-box;
  border-bottom: 1px solid #e8e8e8;
}

.status text.active {
  border-bottom: 1px solid #000000;
}


/* 产品基本信息 */
.products .product {
  margin: 10px;
  border: 1px solid #e8e8e8;
  border-radius: 5px;
}

.products .product-head {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 10px;
  font-size: 14px;
  border-bottom: 1px solid #e8e8e8;
}

.products .product-content {
  padding: 10px;
  background-color: #FFF;
  display: flex;
  flex-direction: row;
}

.products image {
  width: 80px;
  height: 80px;
  border: 1px solid #e8e8e8;
  border-radius: 5px;
}

.products .content {
  flex: 1;
  margin-left: 10px;
}

.products .title {
  margin-bottom: 5px;
}

.products .foot {
  margin-top: 11px;
  display: flex;
  justify-content: space-between;
}

.products .price {
  color: #f83b6b;
  font-weight: 600;
}

.products .sale, .products .number {
  color: #888;
  font-size: 15px;
}

.products .tag {
  font-size: 11px;
  margin-right: 6px;
  color: #ff58a2;
  background-color: rgba(255, 88, 162, .12);
  padding: 2px 5px;
  border-radius: 3px;
}