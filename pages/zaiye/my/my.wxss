/* 用户信息 */
.user {
  padding: 1rem;
  font-size: 14px;
}

.user .user-info {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-bottom: 10px;
}

.user .user-info .avatar {
  width: 60px;
  height: 60px;
  border: 1px solid #CCC;
  border-radius: 50%;
  margin-right: 1rem;
}

.user .labels {
  margin: 5px 0;
}

.user .labels .label {
  background-color: chartreuse;
  color: #000;
  padding: 4px 8px;
  margin-right: 8px;
  margin-bottom: 8px;
  display: inline-block;
  border-radius: 4px;
  font-size: 13px;
}

.user .counts {
  display: flex;
  text-align: center;
}

.user .counts .count {
  margin-right: 20px;
}

.user .counts .count .text {
  display: block;
}

/* 我的创作 */
.my {
  font-size: 14px;
}

.my .status {
  display: flex;
}

.my .status text {
  flex: 1;
  text-align: center;
  padding: 8px;
  border-bottom: 1px solid #CCC;
}

.my .status text.active {
  border-bottom: 1px solid #333;
}

.my .items .item {
  display: flex;
  padding: 1rem;
  border-bottom: 1px solid rgba(204, 204, 204, 0.542);
}

.my .items .item .theme {
  width: 80px;
  height: 80px;
  border: 1px solid #CCC;
  border-radius: 4px;
  margin-right: 1rem;
}

.my .items .item .content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 70%;
}

.my .items .item .content .title {
  font-size: 15px;
  font-weight: 600;
}

.my .items .item .content .desc {
  display: inline-block;
  white-space: nowrap;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}