.page.login {
  background-color: #FFF;
}

/* swiper 滚动区域 */
.swiper {
  margin-top: 50px;
  height: 415px;
}

.swiper swiper {
  height: 57vh;
}

.swiper swiper swiper-item {
  padding: 0 1em;
  box-sizing: border-box;
}

.swiper .logo {
  width: 240px;
  display: block;
  margin: 0 auto;
  position: relative;
  bottom: 100px;
}

.swiper .theme {
  width: 100%;
}

.swiper .title {
  font-size: 30px;
  height: 120px;
  display: block;
}

.swiper .title text {
  display: block;
}

/* form 登录 */
.form {
  height: 415px;
  margin: 50px 30px 0;
  box-sizing: border-box;
}

.form .input {
  position: relative;
}

.form .input .getCode {
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 14px;
  background-color: #000;
  padding: 0 16px;
  border-radius: 4px;
  color: #FFF;
  height: 44px;
  line-height: 44px;
  box-sizing: border-box;
}

.form .input input {
  border: 1px solid #CCC;
  margin-top: 10px;
  margin-bottom: 20px;
  padding: 10px;
  border-radius: 4px;
}

/* 底部按钮 */
.footer {
  margin-top: 30px;
}

.footer .wechat-login {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background-color: #000;
  color: #FFF;
  border-radius: 20px;
  width: 80vw;
  height: 50px;
}

.footer .wechat-login image {
  width: 16px;
  height: 15px;
  margin-right: 5px;
}

.footer .phone, .footer .register {
  display: inline-block;
  color: #666;
  margin: 20px 0 40px;
}

.footer .radio {
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 14px;
}

.footer .radio text text {
  color: #000;
}

.footer .foot-button {
  width: 80vw;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}