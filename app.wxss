/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 1rem;
  box-sizing: border-box;
} 

.centered {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.buttons button {
  margin: 10px;
}

.vertical.centered > view {
  display: flex;
  height: 100vh;
  flex-direction: row;
  align-items: center;
}

.image > image {
  width: 100%;
}

.header {
  font-size: 32px;
  font-family: serif;
}

form {
  width: 100vw;
}

/* 页面组件 header */
.container-component .header-component {
  padding: 20px;
  min-height: 100px;
  text-align: center;
}

.container-component .header-component .title {
  display: block;
  margin-bottom: 10px;
}

/* weui */
.page__hd {
  padding: 2rem;
}

.page__hd .page__title {
  font-size: 20px;
}

.page__hd .page__desc {
  color: #888;
}